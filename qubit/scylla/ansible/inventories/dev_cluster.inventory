[all:vars]
SCYLLA_VERSION=1.6.6
JDK_VERSION=8u131
JDK_CHECKSUM=75b2cb2249710d822a60f83e28860053
JDK_VER_DIR=1.8.0_131
# refer to Scylla issue: XXX
BUG_CPUSET_SCYLLA_SETUP=1
# refer to Scylla issue: XXX
BUG_NODE_EXP=1
# refer to Scylla issue: 140
BUG_SERIAL_STARTUP=1
# refer to Scylla issue: 202
BUG_LONG_RING_DELAY=1

# format supported by hwloc-calc
CPU_SPEC=socket:0-.core:0-

[scylla_nodes:vars]
CLUSTER_NAME="dev"
CLUSTER_SEED_IPS="172.30.0.4,172.30.16.5,172.30.32.4"

# seed_to_start_first and scylla_seed_nodes groups are needed
# due to BUG_SERIAL_STARTUP. See start_server.yml for more
# details
[seed_to_start_first]
li101

[scylla_nodes]
li101 RACK=R132 DC=DC1 LISTEN_IP="172.30.0.4"
li102 RACK=R166 DC=DC1 LISTEN_IP="172.30.16.5"
li103 RACK=R189 DC=DC1 LISTEN_IP="172.30.32.4"
