DEFAULT menu.c32
PROMPT 0
TIMEOUT 300
ONTIMEOUT kickstart
MENU TITLE PXE Network Boot

LABEL localdisk
    MENU LABEL ^Local Hard Drive
    MENU DEFAULT
    LOCALBOOT 0

LABEL kickstart
    KERNEL http://pxe.aristanetworks.com/tftpboot/max/dist/images/pxeboot/vmlinuz
    INITRD http://pxe.aristanetworks.com/tftpboot/max/dist/images/pxeboot/initrd.img
    # ksdevice=link -> use first device with active link
    APPEND ramdisk_size=100000 console=tty0 console=ttyS1,115200n8 inst.repo=nfs:nfs101:/persist2/root/centos7/CentOS-7-x86_64-DVD-1511.iso lang=en_US keymap=us ip=dhcp ksdevice=link ks=http://pxe.aristanetworks.com/tftpboot/milkyway/storage.ks
